@model SeminarskiMobiteli.ViewModel.AdminOglasIndexVM

<h2>Prikaz </h2>


<table class="table table-striped">

	<thead>
		<tr>

			<th>Naslov</th>
			<th>Pozicija</th>
			<th>Lokacija</th>
			<th>Datum objave</th>
			<th>Datum isteka</th>
			<th>Aktivan</th>
			<th>Akcije</th>

		</tr>

	</thead>
	<tbody>
		@foreach (var x in Model.Rows)
		{
		<tr>
			<td>@x.Naslov</td>
			<td>@x.Pozicija</td>
			<td>@x.Lokacija</td>
			<td>@x.DatumObjave.ToString("dd/MM/yyyy")</td>
			<td>@x.DatumIsteka.ToString("dd/MM/yyyy")</td>
			@if (x.AKtivan)
			{
			<td>Da</td>
			}
			else
			{
			<td>Ne</td>
			}

			<td><a class="btn btn-outline-danger btn-sm" asp-action="Izbrisi" asp-controller="Oglas" asp-route-id="@x.OglasId">
				 <i class="fa fa-trash"></i></a></td>
			<td><a class="btn btn-outline-primary btn-sm" asp-action="Uredi" asp-controller="Oglas" asp-route-id="@x.OglasId">
				<i class="fa fa-pen"></i></a></td>

		</tr>

		}
	</tbody>

</table>
<a asp-action="Dodaj" asp-controller="Oglas" class="btn btn-success">Dodaj</a>