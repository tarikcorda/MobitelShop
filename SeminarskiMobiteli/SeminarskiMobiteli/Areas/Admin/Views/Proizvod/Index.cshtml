

@model SeminarskiMobiteli.ViewModel.AdministratorProizvodVM

 



<form method="get" asp-action="Index">

    <div class="form-group">
        <div>
            <span>Pretrazi Mobilne proizvode:</span>
            <input style="padding: 5px; border-radius:25px; border:1px solid lightblue;" type="text" asp-for="Naziv" />
            <input class="btn btn-info" type="submit" value="Pretrazi" />
            
        </div>
    </div>
</form>
<div  style="padding-left:2%;">
 <a asp-action="Index" asp-controller="Pretrazi" class="btn btn-success" asp-area="">jQ Pretraga</a>
 </div>

    <table class="table table-striped">

        <thead>
            <tr>
                <th>Slika</th>
                <th>Naziv</th>
                <th>Kategorija</th>
                <th>Cijena</th>
                <th>Kolicina</th>
                <th>Izbrisi</th>
                <th>Uredi</th>


            </tr>

        </thead>
        <tbody>
            @foreach (var x in Model.Rows)
            {
                
            <tr>
                <td><img src="~/Slike/@x.imageLocation" width="75" height="75" class="img rounded-circle"/></td> 
                <td>@x.Naziv</td>
                <td>@x.Kategorija</td>
                <td>@x.Cijena</td>
                <td>@x.Kolicina</td>
                <td><a class="btn btn-outline-danger btn-sm" asp-action="Izbrisi" asp-controller="Proizvod" asp-route-id="@x.MobitelId">
                 <i class="fa fa-trash"></i></a></td>
                <td><a class="btn btn-outline-primary btn-sm"  asp-action="Uredi" asp-controller="Proizvod" asp-route-id="@x.MobitelId">
                 <i class="fa fa-pen"></i></a></td>

            </tr>
                
            }
        </tbody>

    </table>
    <a asp-action="Dodaj" asp-controller="Proizvod" class="btn btn-success" style="margin-right:10px;">Dodaj</a>
 


 
