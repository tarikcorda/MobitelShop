@model SeminarskiMobiteli.ViewModel.AdminPostDodajVM



<div style="padding-left:2%;">

<div class="row">
    <div id="row">
        <h4 class="text-center title is-4">Uredi post</h4>
        <hr />
        <div class="row forma-post-add">
            <div class="forma-post-add">
                <form asp-action="SnimiUredi">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PostId" />
                    <div class="form-group">
                        <label asp-for="Naslov" class="control-label"> Naslov </label>
                        <input asp-for="Naslov" class="form-control" placeholder="Unesite naslov" />
                        <span asp-validation-for="Naslov" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sadrzaj" class="control-label"> Sadržaj </label>
                        <textarea asp-for="Sadrzaj" class="form-control" placeholder="Unesite vaš sadržaj ovdje" id="oglas-sadrzaj"></textarea>
                        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Autor" class="control-label"> Autor </label>
                        <input asp-for="Autor"  value="@Model.Autor" class="form-control" placeholder="Autor" readonly />
                        <span asp-validation-for="AutorId" class="text-danger" ></span>
                    </div>




                    <div class="form-group">
                        <label class="control-label"> Datum objave oglasa</label>
                        <input value="@DateTime.UtcNow.ToString("dddd dd/MM/yyyy")" disabled class="form-control" />
                    </div>




                    <div class="form-group">
                        <input type="submit" value="Sacuvaj izmjene" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        </div>
             </div>

</div>
