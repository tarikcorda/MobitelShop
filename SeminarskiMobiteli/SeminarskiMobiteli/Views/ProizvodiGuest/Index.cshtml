@model SeminarskiMobiteli.ViewModel.AdministratorProizvodVM




<div>
<form method="get" asp-action="Index">

    <div class="form-group">
        <div>
            <span style="font-style:normal; font-weight: bold !important;">Pretrazi Mobilne proizvode:</span>
            <input style="padding: 5px; border-radius:25px; border:1px solid lightblue;" type="text" asp-for="Naziv" />
            <input style="background-color:green;" class="btn btn-success" type="submit" value="Pretrazi" />

        </div>
    </div>
</form>

    <table class="table table-striped">

        <thead>
            <tr>
                <th>Slika</th>
                <th>Naziv</th>
                <th>Kategorija</th>
                <th>Cijena</th>
              


            </tr>

        </thead>
        <tbody>
            @foreach (var x in Model.Rows)
            {
                
            <tr>
                <td><img src="~/Slike/@x.imageLocation" width="75" height="75" class="img rounded-circle"/></td> 
                <td>@x.Naziv</td>
                <td>@x.Kategorija</td>
                <td>@x.Cijena</td>
            
                

            </tr>
                
            }
        </tbody>

    </table>

    </div>